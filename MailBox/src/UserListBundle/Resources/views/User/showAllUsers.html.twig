{% extends '@UserList/Default/index.html.twig' %}

{% block body %}
    <table border="1px solid black">
        <tr>
            <th>ID</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Opis</th>
            <th>Akcja</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.getId }}</td>
                <td>{{ user.getName }}</td>
                <td>{{ user.getSurname }}</td>
                <td>{{ user.getDescription }}</td>
                <td>
                    <a href="{{ path('modifyuser', {'id': user.getId}) }}">Edytuj</a>
                    <a href="{{ path('deleteuser', {'id': user.getId}) }}">Usu≈Ñ</a>
                    <a href="{{ path('showone', {'id': user.getId}) }}">Poka go!</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}